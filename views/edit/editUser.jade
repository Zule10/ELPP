extends .././layout.jade
block vars
  -var title= 'Update User'
block content
  div(class="col-sm-4")
  div(class="col-sm-3")
    div(class="add")
      form(action="/edit/editUser/#{user._id}" method="POST" )
        div(class="form-group") 
          label(for="name") Name
          input(type="text",name="name",value="#{user.name}",id="name",class="form-control")
          
          
        div
          label(for="lastname") Last Name
          input(type="text",name="lastname",value="#{user.lastname}",id="lastname",class="form-control")
          
        
        div
          label(for="address") Address
          input(type="text",name="address",value="#{user.address}",id="address",class="form-control")  
            
        
        div
          label(for="identification") Identification
          input(type="text",name="identification",value="#{user.identification}",id="identification",class="form-control")    
          
        
          div(class="row top-space")
            div(class="col-xs-12 col-sm-6")
              input(type="submit" value="Update" class="btn btn-info")
            
      
        
        
